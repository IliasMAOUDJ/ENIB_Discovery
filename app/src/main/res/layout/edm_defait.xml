<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:alwaysDrawnWithCache="false"
    android:clipChildren="false"
    android:clipToPadding="true"
    android:padding="5dp"
    app:layout_collapseParallaxMultiplier="1.0">


    <ImageView
        android:id="@+id/popupBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/missed_try"
        tools:ignore="ContentDescription,MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="44dp" />

    <TextView
        android:id="@+id/Corps"
        android:layout_width="270dp"
        android:layout_height="174dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:text="@string/PerduEdm"
        android:textAllCaps="false"
        android:textColor="@color/White"
        android:textSize="24sp"
        android:textStyle="bold"
        app:fontFamily="@font/annie_use_your_telescope"
        app:layout_constraintBottom_toBottomOf="@+id/popupBg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/popupBg" />




</android.support.constraint.ConstraintLayout>